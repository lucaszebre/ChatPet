# Example env file â€” copy to `.env.local` and fill with real secrets.
# Do NOT commit real secrets. This file is safe to commit to the repository.

# Auth / app
BETTER_AUTH_SECRET="your-better-auth-secret"
BETTER_AUTH_URL="http://localhost:5000"
AUTH_GITHUB_ID='your-github-client-id'
AUTH_GITHUB_SECRET='your-github-client-secret'

# Optional: API keys
GOOGLE_AI_API_KEY='your-google-api-key'

AUTH_GOOGLE_ID='your-google-client-id'
AUTH_GOOGLE_SECRET='your-google-client-secret'

# Server / DB
HOST=localhost
DATABASE_PASSWORD=postgres
DATABASE_USER=postgres
DATABASE_PORT=5432
SERVER_PORT=5000
DATABASE=mybot
# You can use the expanded URL pattern below to interpolate other values
DATABASE_URL="postgres://${DATABASE_USER}:${DATABASE_PASSWORD}@${HOST}:${DATABASE_PORT}/${DATABASE}"

# Direct connection to the database. Used for migrations (replace with a real URL for production).
# DIRECT_URL="postgres://user:password@host:port/database"
DIRECT_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${HOST}:${DATABASE_PORT}/${DATABASE}

# Shadow database used by Prisma Migrate
SHADOW_DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${HOST}:${DATABASE_PORT}/${DATABASE}_shadow

REDIRECT_PROXY_URL="http://localhost:5173/"

AUTH_URL="http://localhost:5000/api/auth"

TRUSTED_ORIGIN="http://localhost:5173"

LOG_LEVEL="debug"

VITE_BACKEND_BASE_URL="http://localhost:5000"

# Upload token (replace with a safe value in local dev only)
UPLOADTHING_TOKEN='your-uploadthing-token'
